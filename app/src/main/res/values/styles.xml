<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.MicclavKeyboard" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">#1A73E8</item>
        <item name="colorPrimaryVariant">#1557B0</item>
        <item name="colorOnPrimary">#FFFFFF</item>
        <item name="colorSecondary">#FF6F00</item>
    </style>

    <!-- Keyboard key styles -->
    <style name="KeyboardKey">
        <item name="android:background">@drawable/key_background</item>
        <item name="android:textColor">#212121</item>
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center</item>
        <item name="android:minHeight">48dp</item>
    </style>

    <style name="KeyboardKey.Special">
        <item name="android:background">@drawable/key_special_background</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="KeyboardKey.Space">
        <item name="android:background">@drawable/key_space_background</item>
        <item name="android:textSize">14sp</item>
    </style>
</resources>
